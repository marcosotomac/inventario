{
  "openapi": "3.0.0",
  "info": {
    "title": "Productos Service API",
    "description": "API para gestión de productos e inventario",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5001",
      "description": "Servidor de desarrollo"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Servicio saludable"
          }
        }
      }
    },
    "/api/productos": {
      "get": {
        "summary": "Obtener todos los productos",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 50
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de productos"
          }
        }
      },
      "post": {
        "summary": "Crear nuevo producto",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nombre": {
                    "type": "string"
                  },
                  "descripcion": {
                    "type": "string"
                  },
                  "precio": {
                    "type": "number"
                  },
                  "stock": {
                    "type": "integer"
                  },
                  "categoria_id": {
                    "type": "integer"
                  },
                  "proveedor": {
                    "type": "string"
                  },
                  "sku": {
                    "type": "string"
                  }
                },
                "required": ["nombre", "precio", "categoria_id"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Producto creado"
          }
        }
      }
    },
    "/api/productos/{id}": {
      "get": {
        "summary": "Obtener producto por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Producto encontrado"
          }
        }
      },
      "put": {
        "summary": "Actualizar producto",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Producto actualizado"
          }
        }
      },
      "delete": {
        "summary": "Eliminar producto",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Producto eliminado"
          }
        }
      }
    },
    "/api/categorias": {
      "get": {
        "summary": "Obtener todas las categorías",
        "responses": {
          "200": {
            "description": "Lista de categorías"
          }
        }
      },
      "post": {
        "summary": "Crear nueva categoría",
        "responses": {
          "201": {
            "description": "Categoría creada"
          }
        }
      }
    },
    "/api/productos/buscar": {
      "get": {
        "summary": "Buscar productos",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "categoria",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resultados de búsqueda"
          }
        }
      }
    }
  }
}
